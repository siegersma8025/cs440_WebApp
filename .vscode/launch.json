{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cs440_WebApp/cs440WebApp/manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "serverReadyAction": {
                "pattern": "Starting development server at (https?://\\S+|[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+:[0-9]+)",
                "uriFormat": "http://127.0.0.1:8000",
                "action": "openExternally"
            }
        },
        {
            "name": "Django: Run Server (with DB setup)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cs440_WebApp/cs440WebApp/manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "preLaunchTask": "Django: Setup Database",
            "serverReadyAction": {
                "pattern": "Starting development server at (https?://\\S+|[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+:[0-9]+)",
                "uriFormat": "http://127.0.0.1:8000",
                "action": "openExternally"
            }
        },
        {
            "name": "Django: Run Server (No Migrations)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cs440_WebApp/cs440WebApp/manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        },
        {
            "name": "Django: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cs440_WebApp/cs440WebApp/manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}
